@model IEnumerable<BanCode.Models.Order>
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow border-0">
    <div class="card-header bg-white py-3">
        <h5 class="m-0 fw-bold text-primary"><i class="bi bi-receipt"></i> Danh sách đơn hàng</h5>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Mã đơn</th>
                    <th>Khách hàng</th>
                    <th>Tổng tiền</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="fw-bold text-decoration-none">
                                #@item.Id.ToString().Substring(0, 8)
                            </a>
                        </td>
                        <td>
                            <div class="fw-bold">@item.User?.FullName</div>
                            <div class="small text-muted">@item.User?.Email</div>
                        </td>
                        <td class="fw-bold text-danger">@item.TotalAmount.ToString("N0") đ</td>
                        <td>@item.CreatedAt.ToString()</td>
                        <td>
                            @if (item.Status == "completed")
                            {
                                <span class="badge bg-success">Thành công</span>
                            }
                            else if (item.Status == "pending" || item.Status == "processing")
                            {
                                <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Đã hủy</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                Xem & Duyệt
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>