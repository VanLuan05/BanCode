@model IEnumerable<BanCode.Models.Contact>

@{
    ViewData["Title"] = "Hộp thư hỗ trợ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Yêu cầu hỗ trợ</h6>
        <span class="badge bg-danger">@Model.Count(c => !c.IsRead) tin mới</span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Người gửi</th>
                        <th>Chủ đề</th>
                        <th>Thời gian</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var rowClass = !item.IsRead ? "fw-bold bg-light" : "";
                        <tr class="@rowClass">
                            <td>
                                <div>@item.FullName</div>
                                <small class="text-muted fw-normal">@item.Email</small>
                            </td>
                            <td>@item.Subject</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (!item.IsRead)
                                {
                                    <span class="badge bg-danger">Mới</span>
                                }
                                else
                                {

                                    <span class="badge bg-success">Đã xem</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Xóa tin nhắn này?');">
                                    <button type="submit" class="btn btn-sm btn-link text-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>