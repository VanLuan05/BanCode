@model BanCode.Models.Contact
@{
    ViewData["Title"] = "Chi tiết tin nhắn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <a asp-action="Index" class="btn btn-outline-secondary mb-3"><i class="bi bi-arrow-left"></i> Quay lại</a>
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="m-0 fw-bold text-primary">@Model.Subject</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Người gửi:</strong> @Model.FullName <br>
                    <strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">Gửi lúc: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
            </div>
            <hr>
            <div class="p-4 bg-light rounded border mb-4">
                <p class="mb-0" style="white-space: pre-line;">@Model.Message</p>
            </div>
            <a href="mailto:@Model.Email?subject=Re: @Model.Subject&body=Chào @Model.FullName,%0D%0A%0D%0ACảm ơn bạn đã liên hệ...%0D%0A"
               class="btn btn-primary px-4">
                <i class="bi bi-reply-fill"></i> Trả lời qua Email
            </a>
        </div>
    </div>
</div>