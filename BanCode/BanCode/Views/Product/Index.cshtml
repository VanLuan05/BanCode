@model BanCode.Models.ProductListViewModel

@{
    ViewData["Title"] = "Tất cả sản phẩm";
}

<div class="bg-primary py-4 mb-4">
    <div class="container text-white">
        <h2 class="fw-bold">Kho Source Code</h2>
        <p class="mb-0 opacity-75">Hơn 500+ đồ án chất lượng cao đang chờ bạn khám phá</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row">

        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-bold py-3">
                    <i class="bi bi-funnel-fill me-2 text-primary"></i> Bộ Lọc Tìm Kiếm
                </div>
                <div class="card-body">
                    <form asp-controller="Product" asp-action="Index" method="get" id="filterForm">

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase">Từ khóa</label>
                            <div class="input-group">
                                <input type="text" name="keyword" value="@Model.CurrentKeyword" class="form-control" placeholder="Tìm tên đồ án...">
                                <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase">Danh mục</label>
                            <div class="list-group list-group-flush border rounded">
                                <a href="javascript:void(0)" onclick="selectCategory('')"
                                   class="list-group-item list-group-item-action @(Model.CurrentCategoryId == null ? "active" : "")">
                                    Tất cả
                                </a>
                                @foreach (var cat in Model.Categories)
                                {
                                    <a href="javascript:void(0)" onclick="selectCategory('@cat.Id')"
                                       class="list-group-item list-group-item-action @(Model.CurrentCategoryId == cat.Id ? "active" : "")">
                                        @cat.Name
                                    </a>
                                }
                                <input type="hidden" name="categoryId" id="hiddenCatId" value="@Model.CurrentCategoryId" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase">Khoảng giá (VNĐ)</label>
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <input type="number" name="minPrice" value="@Model.CurrentMinPrice" class="form-control form-control-sm" placeholder="Từ">
                                <span>-</span>
                                <input type="number" name="maxPrice" value="@Model.CurrentMaxPrice" class="form-control form-control-sm" placeholder="Đến">
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark btn-sm">Áp dụng bộ lọc</button>
                            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none text-danger mt-1">Xóa bộ lọc</a>
                        </div>

                        <input type="hidden" name="sort" id="hiddenSort" value="@Model.CurrentSort" />
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-9">

            <div class="d-flex justify-content-between align-items-center mb-4 bg-light p-3 rounded shadow-sm">
                <span class="text-muted">Tìm thấy <strong>@Model.Products.Count()</strong> sản phẩm</span>

                <div class="d-flex align-items-center">
                    <label class="me-2 small text-muted">Sắp xếp:</label>
                    <select class="form-select form-select-sm" style="width: 150px;" onchange="applySort(this.value)">
                        <option value="">Mới nhất</option>
                        <option value="price_asc" selected="@(Model.CurrentSort == "price_asc")">Giá tăng dần</option>
                        <option value="price_desc" selected="@(Model.CurrentSort == "price_desc")">Giá giảm dần</option>
                        <option value="name_asc" selected="@(Model.CurrentSort == "name_asc")">Tên A-Z</option>
                    </select>
                </div>
            </div>

            @if (!Model.Products.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox-fill display-1 text-muted opacity-25"></i>
                    <p class="mt-3 text-muted">Không tìm thấy sản phẩm nào phù hợp với bộ lọc.</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var item in Model.Products)
                    {
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm hover-card">
                                <div class="position-relative overflow-hidden">
                                    <img src="@item.ThumbnailUrl" class="card-img-top" style="height: 180px; object-fit: cover;" alt="@item.Title">
                                    @if (item.SalePrice < item.Price)
                                    {
                                        <span class="badge bg-danger position-absolute top-0 end-0 m-2">-@((100 - (item.SalePrice / item.Price * 100)).ToString("0"))%</span>
                                    }
                                </div>

                                <div class="card-body d-flex flex-column p-3">
                                    <div class="mb-2">
                                        <span class="badge bg-light text-dark border">@item.CategoryName</span>
                                    </div>
                                    <h6 class="card-title text-truncate mb-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark stretched-link">@item.Title</a>
                                    </h6>

                                    <p class="card-text small text-muted mb-3 text-truncate">
                                        <i class="bi bi-code-slash me-1"></i>
                                        @(item.TechStack?.Replace("[", "").Replace("]", "").Replace("\"", "").Replace(",", ", "))
                                    </p>

                                    <div class="mt-auto d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-bold text-primary">@item.SalePrice.ToString("N0")đ</div>
                                            @if (item.SalePrice < item.Price)
                                            {
                                                <small class="text-decoration-line-through text-muted" style="font-size: 0.8rem;">@item.Price.ToString("N0")đ</small>
                                            }
                                        </div>
                                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-packageId="@item.DefaultPackageId"
                                           class="btn btn-sm btn-primary rounded-circle shadow-sm d-flex align-items-center justify-content-center text-white"
                                           style="width: 32px; height: 32px; z-index: 2; position: relative;"
                                           title="Thêm vào giỏ hàng">
                                            <i class="bi bi-cart-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Hàm chọn danh mục (cập nhật input ẩn và submit form)
    function selectCategory(catId) {
        document.getElementById('hiddenCatId').value = catId;
        document.getElementById('filterForm').submit();
    }

    // Hàm chọn sắp xếp (cập nhật input ẩn và submit form)
    function applySort(sortValue) {
        document.getElementById('hiddenSort').value = sortValue;
        document.getElementById('filterForm').submit();
    }
</script>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .z-2 {
        z-index: 2;
    }

    /* Style cho Category Active */
    .list-group-item.active {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
    }
</style>