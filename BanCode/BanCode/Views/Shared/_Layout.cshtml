@using Microsoft.AspNetCore.Http
@using BanCode.Helpers
@using BanCode.Models
@{
    var user = Context.Session.Get<User>("UserSession");
}
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Lấy giỏ hàng từ Session
    var sessionCart = HttpContextAccessor.HttpContext.Session.Get<List<CartItem>>("Cart");
    var cartCount = sessionCart?.Count ?? 0; // Nếu null thì bằng 0
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BanCode</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BanCode.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="BanCode Logo" height="40" class="d-inline-block align-text-top me-2">
                    
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Pricing" asp-action="Index">Bảng giá</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-controller="Contact" asp-action="Index">Hỗ trợ kỹ thuật</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center gap-3">

                        <li class="nav-item">
                            <a class="nav-link link-secondary" asp-controller="Order" asp-action="TrackOrder" title="Tra cứu đơn hàng">
                                <i class="bi bi-search"></i> <span class="d-lg-none">Tra cứu</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-primary position-relative rounded-pill px-3 border-0 bg-light text-primary" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart-fill"></i>
                                @if (cartCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light shadow-sm">
                                        @cartCount
                                        <span class="visually-hidden">sản phẩm</span>
                                    </span>
                                }
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center" style="width: 32px; height: 32px;">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <span class="fw-bold text-dark">
                                        @(User.FindFirst("FullName")?.Value ?? User.Identity.Name)
                                    </span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown">
                                    @if (User.IsInRole("admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item text-danger fw-bold" asp-controller="Admin" asp-action="Index">
                                                <i class="fas fa-user-shield me-2"></i> Trang Quản Trị
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }

                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Hồ sơ cá nhân</a></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Order" asp-action="History">
                                            <i class="bi bi-bag-check me-2"></i> Đơn mua
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-medium" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill px-4 fw-bold" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light pt-5 pb-3 mt-auto border-top border-secondary">
        <div class="container">
            <div class="row g-4 justify-content-between">

                <div class="col-lg-4 col-md-6">
                    <h4 class="text-white fw-bold mb-3">
                        <span class="text-primary">CODE</span>MART
                    </h4>
                    <p class="text-secondary mb-4">
                        Nền tảng cung cấp mã nguồn đồ án và website mẫu chất lượng cao cho sinh viên IT & doanh nghiệp SME. Cam kết code sạch, chạy ổn định.
                    </p>

                    <div class="d-flex flex-column gap-2 text-secondary">
                        <div>
                            <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                            <span>Tòa nhà Innovation, Q.12, TP.HCM</span>
                        </div>
                        <div>
                            <i class="bi bi-envelope-fill text-primary me-2"></i>
                            <a href="mailto:support@bancode.vn" class="text-secondary text-decoration-none hover-white">support@bancode.vn</a>
                        </div>
                        <div>
                            <i class="bi bi-telephone-fill text-primary me-2"></i>
                            <span class="fw-bold text-white">032.671.255 (Zalo)</span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h6 class="text-white fw-bold mb-3 text-uppercase">Sản phẩm</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2">
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Đồ án C# Winform</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Website ASP.NET Core</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Mã nguồn Laravel</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Ứng dụng Mobile (React)</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Source Game Unity</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h6 class="text-white fw-bold mb-3 text-uppercase">Hỗ trợ</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2">
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Hướng dẫn cài đặt</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Chính sách bảo hành</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Câu hỏi thường gặp</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Quy định đổi trả</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none hover-primary">Kiểm tra đơn hàng</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h6 class="text-white fw-bold mb-3 text-uppercase">Đăng ký nhận tin</h6>
                    <p class="text-secondary small mb-3">Nhận thông báo về mã nguồn miễn phí và khuyến mãi mới nhất.</p>
                    <form class="mb-4">
                        <div class="input-group">
                            <input type="email" class="form-control bg-transparent border-secondary text-white" placeholder="Email của bạn">
                            <button class="btn btn-primary" type="button"><i class="bi bi-send"></i></button>
                        </div>
                    </form>

                    <h6 class="text-white fw-bold mb-3 text-uppercase">Chấp nhận thanh toán</h6>
                    <div class="d-flex gap-2">
                        <div class="bg-white p-1 rounded"><img src="https://upload.wikimedia.org/wikipedia/vi/f/fe/MoMo_Logo.png" width="30" alt="Momo"></div>
                        <div class="bg-white p-1 rounded"><img src="https://img.mservice.io/momo_app_v2/img/Napas.png" width="30" alt="Napas"></div>
                        <div class="bg-white p-1 rounded"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b7/MasterCard_Logo.svg/1200px-MasterCard_Logo.svg.png" width="30" alt="Mastercard"></div>
                        <div class="bg-white p-1 rounded"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5e/Visa_Inc._logo.svg/2560px-Visa_Inc._logo.svg.png" width="30" alt="Visa"></div>
                    </div>
                </div>
            </div>

            <hr class="border-secondary my-4 opacity-50">

            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <p class="text-secondary small mb-0">
                        &copy; 2025 <strong>BanCode.vn</strong>. All rights reserved. <br>
                        <span class="fst-italic">Sản phẩm phục vụ mục đích học tập & tham khảo.</span>
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-secondary me-3 fs-5 hover-primary"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-secondary me-3 fs-5 hover-primary"><i class="bi bi-youtube"></i></a>
                    <a href="#" class="text-secondary fs-5 hover-primary"><i class="bi bi-github"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
