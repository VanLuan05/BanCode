@model BanCode.Models.HomeViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    body {
        overflow-x: hidden;
    }
    /* CSS nhúng nhanh để làm đẹp riêng trang chủ */
    .hero-section {
        
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: white;
        padding: 100px 0;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: "";
            position: absolute;
            top: -50%;
            right: -10%;
            width: 600px;
            height: 600px;
            background: rgba(99, 102, 241, 0.2);
            filter: blur(80px);
            border-radius: 50%;
            z-index: 0;
        }

    .trust-badge {
        transition: transform 0.3s;
    }

        .trust-badge:hover {
            transform: translateY(-5px);
        }

    .product-card {
        transition: all 0.3s ease;
        border: 1px solid #e2e8f0;
    }

        .product-card:hover {
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            transform: translateY(-3px);
            border-color: #6366f1;
        }

    .testimonial-card {
        background: #f8fafc;
        border-left: 4px solid #6366f1;
    }

    .section-padding {
        padding: 60px 0;
    }
</style>

<div class="hero-section text-center text-lg-start mb-5">
    <div class="container position-relative" style="z-index: 1;">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <span class="badge bg-indigo-500 text-white px-3 py-2 rounded-pill mb-3 border border-light">
                    🚀 Giải pháp Đồ án & Website số 1
                </span>
                <h1 class="display-4 fw-bold mb-4 lh-base">
                    Sở hữu Mã nguồn Chất lượng <br />
                    <span class="text-warning">Tiết kiệm 80% thời gian</span>
                </h1>
                <p class="lead text-gray-300 mb-4" style="color: #cbd5e1;">
                    Kho thư viện hơn 100+ đồ án mẫu, website kinh doanh và phần mềm quản lý chuẩn kiến trúc (Clean Architecture). Tải về - Cài đặt - Chạy ngay.
                </p>

                <div class="input-group input-group-lg bg-white rounded-pill p-1 shadow-lg mb-4" style="max-width: 500px;">
                    <input type="text" class="form-control border-0 rounded-pill ps-4" placeholder="Tìm kiếm: React, C#, Đồ án tốt nghiệp...">
                    <button class="btn btn-primary rounded-pill px-4 fw-bold" type="button">Tìm kiếm</button>
                </div>

                <div class="d-flex gap-3 text-sm text-light opacity-75">
                    <span>✓ Code sạch</span>
                    <span>✓ Kèm báo cáo</span>
                    <span>✓ Hỗ trợ cài đặt</span>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block text-center">
                <img src="~/images/dashboard.png"
                     class="img-fluid rounded-4 shadow-lg border border-secondary"
                     style="transform: perspective(1000px) rotateY(-10deg) rotateX(5deg);"
                     alt="Dashboard Demo"
                     asp-append-version="true">
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row text-center g-4">
        <div class="col-md-3 col-6">
            <div class="trust-badge p-4 bg-white rounded-3 shadow-sm h-100 border">
                <div class="fs-1 mb-2">⚡</div>
                <h5 class="fw-bold">Tải ngay lập tức</h5>
                <p class="text-muted small mb-0">Hệ thống tự động gửi link sau khi thanh toán 5 giây.</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="trust-badge p-4 bg-white rounded-3 shadow-sm h-100 border">
                <div class="fs-1 mb-2">🛡️</div>
                <h5 class="fw-bold">Code đã kiểm duyệt</h5>
                <p class="text-muted small mb-0">100% mã nguồn sạch, không virus, chạy đúng mô tả.</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="trust-badge p-4 bg-white rounded-3 shadow-sm h-100 border">
                <div class="fs-1 mb-2">📚</div>
                <h5 class="fw-bold">Full Tài liệu</h5>
                <p class="text-muted small mb-0">Tặng kèm Báo cáo Word, Slide và Sơ đồ Database.</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="trust-badge p-4 bg-white rounded-3 shadow-sm h-100 border">
                <div class="fs-1 mb-2">🎧</div>
                <h5 class="fw-bold">Hỗ trợ 24/7</h5>
                <p class="text-muted small mb-0">Team kỹ thuật hỗ trợ cài đặt qua UltraView.</p>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="d-flex align-items-center mb-3">
        <h4 class="fw-bold m-0 me-3">Khám phá theo công nghệ</h4>
        <div class="h-1 flex-grow-1 bg-light rounded"></div>
    </div>
    <div class="d-flex flex-wrap gap-2">
        <button class="btn btn-dark rounded-pill px-4">Tất cả</button>
        @foreach (var cat in Model.Categories)
        {
            <button class="btn btn-outline-secondary rounded-pill px-3">@cat.Name</button>
        }
    </div>
</div>

<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold">Sản phẩm mới nhất</h2>
            <p class="text-muted mb-0">Các đồ án và mẫu website vừa được cập nhật</p>
        </div>
        <a href="#" class="btn btn-outline-primary rounded-pill">Xem tất cả kho code &rarr;</a>
    </div>

    @if (Model.FeaturedProducts.Count == 0)
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle fs-1"></i>
            <p class="mt-3">Hệ thống đang cập nhật sản phẩm. Vui lòng quay lại sau!</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
            @foreach (var item in Model.FeaturedProducts)
            {
                <div class="col">
                    <div class="card product-card h-100 border-0 bg-white rounded-3 overflow-hidden">
                        <div class="position-relative" style="height: 180px;">
                            <img src="@(string.IsNullOrEmpty(item.ThumbnailUrl) ? "https://placehold.co/600x400?text=Code+Mau" : item.ThumbnailUrl)"
                                 class="w-100 h-100 object-fit-cover" alt="@item.Title">
                            <span class="position-absolute top-0 start-0 bg-danger text-white text-xs px-2 py-1 m-2 rounded fw-bold small">HOT</span>
                        </div>

                        <div class="card-body d-flex flex-column p-3">
                            <div class="mb-2">
                                <span class="badge bg-light text-secondary border">@item.CategoryName</span>
                            </div>
                            <h6 class="card-title fw-bold text-dark lh-sm mb-2" style="min-height: 40px;">
                                <a asp-controller="Home" asp-action="Detail" asp-route-slug="@item.Slug">
                                    @item.Title
                                </a>
                            </h6>

                            <div class="mb-3 d-flex align-items-center small text-warning">
                                <span>★★★★★</span>
                                <span class="text-muted ms-1">(@item.ReviewCount đánh giá)</span>
                            </div>

                            <div class="mt-auto pt-3 border-top d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold text-primary fs-5">@item.SalePrice.ToString("N0") đ</div>
                                    <div class="text-decoration-line-through text-muted small" style="font-size: 12px;">@item.Price.ToString("N0") đ</div>
                                </div>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-packageId="@item.DefaultPackageId"
                                   class="btn btn-sm btn-primary rounded-circle shadow-sm d-flex align-items-center justify-content-center text-white"
                                   style="width: 32px; height: 32px; z-index: 2; position: relative;"
                                   title="Thêm vào giỏ hàng">
                                    <i class="bi bi-cart-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="bg-light py-5 mb-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="display-5 fw-bold text-primary">@Model.TotalDownloads.ToString("N0")+</div>
                <div class="text-muted text-uppercase fw-bold letter-spacing-1">Lượt tải xuống</div>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="display-5 fw-bold text-primary">@Model.TotalStudents.ToString("N0")+</div>
                <div class="text-muted text-uppercase fw-bold letter-spacing-1">Khách hàng hài lòng</div>
            </div>
            <div class="col-md-4">
                <div class="display-5 fw-bold text-primary">@Model.TotalProducts+</div>
                <div class="text-muted text-uppercase fw-bold letter-spacing-1">Mã nguồn chất lượng</div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5 pb-5">
    <h2 class="text-center fw-bold mb-5">Sinh viên & Lập trình viên nói gì về chúng tôi?</h2>
    <div class="row g-4">
        @foreach (var review in Model.Testimonials)
        {
            <div class="col-md-4">
                <div class="testimonial-card p-4 rounded-3 h-100 shadow-sm position-relative">
                    <div class="text-warning mb-3">★★★★★</div>
                    <p class="fst-italic text-muted mb-4">"@review.Comment"</p>
                    <div class="d-flex align-items-center mt-auto">
                        <img src="@review.AvatarUrl" class="rounded-circle me-3" width="48" height="48" alt="Avatar">
                        <div>
                            <div class="fw-bold">@review.CustomerName</div>
                            <small class="text-muted">@review.CustomerRole</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container mb-5">
    <div class="bg-primary text-white rounded-4 p-5 text-center shadow-lg"
         style="background-image: url('https://www.transparenttextures.com/patterns/cubes.png');">
        <h2 class="fw-bold mb-3">Bạn cần hỗ trợ tìm đồ án phù hợp?</h2>
        <p class="lead mb-4 opacity-75">Đội ngũ kỹ thuật của chúng tôi sẵn sàng tư vấn miễn phí cho bạn.</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="https://zalo.me/0326371255" target="_blank" class="btn btn-light btn-lg fw-bold rounded-pill px-5 text-primary shadow hover-scale">
                <i class="bi bi-chat-dots-fill me-2"></i> Chat Zalo Ngay
            </a>

            <a href="#" class="btn btn-outline-light btn-lg rounded-pill px-5">
                Xem hướng dẫn mua
            </a>
        </div>
    </div>
</div>