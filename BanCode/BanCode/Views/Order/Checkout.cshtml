@{
    ViewData["Title"] = "Thanh toán";
    var cart = ViewBag.Cart as List<BanCode.Models.CartItem>;
    decimal total = ViewBag.TotalAmount ?? 0;
}

<div class="container py-5">
    <div class="row g-5">
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3 fw-bold">Thông tin thanh toán</h4>
            <form asp-action="ProcessPayment" method="post" class="needs-validation">
                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Họ và tên</label>
                        <input type="text" class="form-control" name="fullName" required placeholder="Nguyễn Văn A">
                    </div>

                    <div class="col-12">
                        <label class="form-label">Email (để nhận code)</label>
                        <input type="email" class="form-control" name="email" required placeholder="email@example.com">
                    </div>
                </div>

                <hr class="my-4">

                <h4 class="mb-3 fw-bold">Phương thức thanh toán</h4>
                <div class="my-3">
                    <div class="form-check">
                        <input id="bank" name="paymentMethod" type="radio" class="form-check-input" checked required>
                        <label class="form-check-label" for="bank">Chuyển khoản ngân hàng (QR Code)</label>
                    </div>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg rounded-pill py-3 fw-bold shadow hover-scale" type="submit">
                    <i class="bi bi-lock-fill me-2"></i> XÁC NHẬN THANH TOÁN @total.ToString("N0") đ
                </button>
            </form>
        </div>

        <div class="col-md-5 col-lg-4">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body p-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-primary fw-bold">Đơn hàng của bạn</span>
                        <span class="badge bg-primary rounded-pill">@cart?.Count</span>
                    </h4>

                    <ul class="list-group mb-3 border-0">
                        @if (cart != null)
                        {
                            foreach (var item in cart)
                            {
                                <li class="list-group-item d-flex justify-content-between lh-sm bg-transparent border-bottom">
                                    <div>
                                        <h6 class="my-0 small fw-bold text-truncate" style="max-width: 180px;">@item.ProductName</h6>
                                        <small class="text-muted">Gói: @item.PackageType</small>
                                    </div>
                                    <span class="text-muted">@item.Price.ToString("N0") đ</span>
                                </li>
                            }
                        }

                        <li class="list-group-item d-flex justify-content-between bg-transparent border-0 pt-3">
                            <span class="fw-bold">Tổng cộng (VND)</span>
                            <strong class="fs-5 text-danger">@total.ToString("N0") đ</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>