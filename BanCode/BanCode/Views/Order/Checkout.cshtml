@model BanCode.Models.ProductPackage
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h3 class="fw-bold mb-4 text-primary"><i class="bi bi-bag-check"></i> Xác nhận thanh toán</h3>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="d-flex gap-3 mb-4 border-bottom pb-3">
                        <div class="bg-light rounded p-2 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-box-seam fs-3 text-primary"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">@Model.Product?.Title</h6>
                            <span class="badge bg-info text-dark">Gói: @Model.PackageType.ToUpper()</span>
                        </div>
                    </div>

                    <form asp-action="ProcessPayment" method="post">
                        <input type="hidden" name="packageId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ và tên</label>
                            <input type="text" name="fullName" class="form-control" required placeholder="Nhập tên của bạn" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email nhận code</label>
                            <input type="email" name="email" class="form-control" required placeholder="example@gmail.com" />
                            <div class="form-text text-danger"><i class="bi bi-exclamation-circle"></i> Link tải sẽ được gửi vào email này.</div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center py-3 border-top mt-4">
                            <span class="text-muted">Tổng thanh toán:</span>
                            <span class="fs-4 fw-bold text-primary">@((Model.SalePrice ?? Model.Price).ToString("N0")) đ</span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow">
                            XÁC NHẬN & LẤY MÃ QR
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>