@{
    ViewData["Title"] = "Thanh toán";
    var cart = ViewBag.Cart as List<BanCode.Models.CartItem>;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-7">
            <h4 class="mb-3">Thông tin thanh toán</h4>

            <form asp-action="ProcessPayment" asp-controller="Order" method="post">

                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <input type="text" name="fullName" class="form-control" required placeholder="Nhập họ tên của bạn">
                </div>

                <div class="mb-3">
                    <label class="form-label">Email (để nhận code)</label>
                    <input type="email" name="email" class="form-control" required placeholder="Nhập email chính xác">
                </div>

                <hr class="my-4">

                <h4 class="mb-3">Phương thức thanh toán</h4>

                <div class="my-3">
                    <div class="form-check p-3 border rounded mb-2 bg-light">
                        <input id="paymentVnPay" name="paymentMethod" type="radio" class="form-check-input" value="VnPay" required checked>
                        <label class="form-check-label fw-bold" for="paymentVnPay">
                            Thanh toán qua VNPay (ATM/QR)
                            <img src="https://vnpay.vn/s1/statics.vnpay.vn/2023/6/0oxhzjmxbksr1686814746087.png" style="height: 30px; margin-left: 10px;">
                        </label>
                    </div>

                    <div class="form-check p-3 border rounded">
                        <input id="paymentCOD" name="paymentMethod" type="radio" class="form-check-input" value="COD">
                        <label class="form-check-label" for="paymentCOD">
                            Chuyển khoản thủ công (Quét QR cá nhân)
                        </label>
                    </div>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">
                    Thanh toán ngay (@(ViewBag.TotalAmount?.ToString("N0") ?? "0") đ)
                </button>
            </form>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="m-0">Đơn hàng của bạn</h5>
                </div>
                <ul class="list-group list-group-flush">
                    @if (cart != null)
                    {
                        foreach (var item in cart)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <h6 class="my-0">@item.ProductName</h6>
                                    <small class="text-muted">@item.PackageType</small>
                                </div>
                                <span class="text-muted">@item.Price.ToString("N0")đ</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <span class="fw-bold">Tổng cộng</span>
                            <strong class="text-primary">@cart.Sum(x => x.Price).ToString("N0")đ</strong>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>