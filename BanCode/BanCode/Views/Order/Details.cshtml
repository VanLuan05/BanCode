@model BanCode.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container py-5">
    <div class="mb-4">
        <a asp-action="History" class="text-decoration-none text-muted">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Danh sách sản phẩm</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@item.Package.PackageType</h5>
                                <p class="card-text text-muted">Gói: @item.Package.PackageType</p>

                                @if (Model.Status == "completed")
                                {
                                    <a asp-action="DownloadFile"
                                       asp-controller="Order"
                                       asp-route-orderId="@Model.Id"
                                       asp-route-packageId="@item.PackageId"
                                       class="btn btn-success">
                                        <i class="bi bi-cloud-download-fill"></i> Tải xuống ngay
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary" disabled>
                                        <i class="bi bi-lock-fill"></i> Thanh toán để mở khóa
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Thông tin thanh toán</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Mã đơn hàng:</span>
                        <span class="fw-bold">#@Model.Id.ToString().Substring(0, 8)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Ngày đặt:</span>
                        <span>@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Phương thức:</span>
                        <span class="text-uppercase">@Model.PaymentMethod</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Trạng thái:</span>
                        @if (Model.Status == "completed")
                        {
                            <span class="text-success fw-bold">Đã thanh toán</span>
                        }
                        else
                        {
                            <span class="text-warning fw-bold">@Model.Status</span>
                        }
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between align-items-center">
                        <span class="h5 mb-0">Tổng cộng:</span>
                        <span class="h4 text-primary fw-bold mb-0">@Model.TotalAmount.ToString("N0") đ</span>
                    </div>

                    @if (Model.Status == "pending")
                    {
                        <div class="d-grid mt-4">
                            <button class="btn btn-warning py-2">Thanh toán ngay</button>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0 mt-3">
                <div class="card-body text-center">
                    <small class="text-muted">Cần hỗ trợ? Liên hệ <a href="#">Zalo Admin</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .last-no-border:last-child {
        border-bottom: none !important;
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }
</style>