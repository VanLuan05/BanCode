@model IEnumerable<BanCode.Models.Order>

@{
    ViewData["Title"] = "Lịch sử mua hàng";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="fw-bold">Đơn mua của tôi</h2>
            <p class="text-muted">Theo dõi và tải xuống sản phẩm đã mua.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-cart-x display-4"></i>
            <p class="mt-3">Bạn chưa có đơn hàng nào.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">Dạo cửa hàng ngay</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="py-3 ps-4">Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Sản phẩm</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@item.Id.ToString().Substring(0, 8)</td>
                                    <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.OrderItems.Any())
                                        {
                                            var firstItem = item.OrderItems.First();
                                            <span>@firstItem.Product.Title</span>
                                            @if (item.OrderItems.Count > 1)
                                            {
                                                <small class="text-muted">(@(item.OrderItems.Count - 1) sản phẩm khác)</small>
                                            }
                                        }
                                    </td>
                                    <td class="fw-bold">@item.TotalAmount.ToString("N0") đ</td>
                                    <td>
                                        @if (item.Status == "completed")
                                        {
                                            <span class="badge bg-success rounded-pill">Hoàn thành</span>
                                        }
                                        else if (item.Status == "pending")
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill">Chờ thanh toán</span>
                                        }
                                        else if (item.Status == "processing")
                                        {
                                            <span class="badge bg-info text-dark rounded-pill">Đang xử lý</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger rounded-pill">Đã hủy</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            Xem chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>